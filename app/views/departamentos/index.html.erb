<p><%= notice %></p>

<h1>Departamentos</h1>

<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>Nome</th>
      <th colspan="3" class="text-center">Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @departamentos.each do |departamento| %>
      <tr>
        <td><%= departamento.nome %></td>
        <td style="padding-right: 5px;">
          <%= link_to "Ver produtos relacionados", departamento, class:"btn btn-primary" %>
        </td>
        <td>
          <%= link_to "Editar", edit_departamento_path(departamento), class:"btn btn-warning" %>
        </td>
        <td>
          <%= link_to "Apagar", departamento, method: :delete, data:
          { confirm: "Tem certeza que deseja deletar este departamento?" }, class:"btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "+ Criar novo departamento", new_departamento_path, class:"btn btn-success" %>
